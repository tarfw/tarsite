---
import '../styles/global.css';
import Footer from '../components/Footer.astro';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Workspace - TarSite</title>
  </head>
  <body class="bg-notion-light font-sans">
    <div class="w-full">
      <!-- Header -->
      <header class="flex justify-between items-center py-4 px-6 border-b border-notion-gray">
        <div class="flex items-center space-x-2">
          <a href="/"><img src="/tarbrand.png" alt="TarSite Logo" class="h-8"></a>
          <span class="text-2xl font-bold">Tar</span>
        </div>
        <nav class="hidden md:flex space-x-6">
          <a href="/workspace" class="text-notion-dark hover:bg-notion-gray px-3 py-2 rounded-md">Workspace</a>
          <a href="/ai-agents" class="text-notion-dark hover:bg-notion-gray px-3 py-2 rounded-md">AI Agents</a>
          <a href="/peoples" class="text-notion-dark hover:bg-notion-gray px-3 py-2 rounded-md">Peoples</a>
          <a href="/pricing" class="text-notion-dark hover:bg-notion-gray px-3 py-2 rounded-md">Pricing</a>
        </nav>
        <div class="flex space-x-4">
          <button class="px-4 py-2 bg-blue-700 text-white rounded-md hover:bg-blue-800">Download App</button>
        </div>
      </header>

      <!-- Hero Section -->
      <section class="h-screen min-h-[80vh] flex flex-col justify-center items-center text-center py-16 px-4">
        <h1 class="text-5xl md:text-6xl font-bold text-notion-dark mb-6">
          Your Collaborative Workspace
        </h1>
        <p class="text-xl text-notion-dark mb-10">
          Organize your projects, tasks, and team collaboration in one place.<br>
          Work smarter with our intuitive workspace tools.
        </p>
        <div class="flex justify-center">
          <button class="px-6 py-3 bg-blue-700 text-white rounded-md text-lg hover:bg-blue-800">
            Get Started
          </button>
        </div>
      </section>

      <!-- Features Section -->
      <section class="min-h-[90vh] flex items-center px-4">
        <div class="flex flex-col lg:flex-row gap-8 w-full">
          <!-- Feature 1 -->
          <div class="w-full lg:w-1/3 p-6 border border-notion-gray rounded-lg">
            <div class="text-4xl mb-4">📁</div>
            <h3 class="text-xl font-bold mb-2">Project Management</h3>
            <p class="text-notion-dark">
              Create and manage projects with ease. Track progress, set deadlines, and collaborate with your team.
            </p>
          </div>
          
          <!-- Feature 2 -->
          <div class="w-full lg:w-1/3 p-6 border border-notion-gray rounded-lg">
            <div class="text-4xl mb-4">📋</div>
            <h3 class="text-xl font-bold mb-2">Task Organization</h3>
            <p class="text-notion-dark">
              Break down projects into manageable tasks. Assign responsibilities and monitor completion status.
            </p>
          </div>
          
          <!-- Feature 3 -->
          <div class="w-full lg:w-1/3 p-6 border border-notion-gray rounded-lg">
            <div class="text-4xl mb-4">📊</div>
            <h3 class="text-xl font-bold mb-2">Progress Tracking</h3>
            <p class="text-notion-dark">
              Visualize your team's progress with charts and reports. Make data-driven decisions.
            </p>
          </div>
        
      </div>
        </div>
      </section>

      <!-- Spacer -->
      <div class="h-16"></div>

      <Footer />
    </div>
  </body>
</html>