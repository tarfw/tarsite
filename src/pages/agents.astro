---
import '../styles/global.css';
import Footer from '../components/Footer.astro';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>AI Agents - TarSite</title>
  </head>
  <body class="bg-background text-foreground font-sans">
    <div class="w-full">
      <!-- Header -->
      <header class="flex justify-between items-center py-4 px-6 border-b border-border">
      <div class="flex items-center space-x-2">
      <a href="/" class="rounded-lg overflow-hidden"><img src="/tar.png" alt="TarSite Logo" class="h-8"></a>
      </div>

      <nav id="nav-menu" class="hidden md:flex md:space-x-8 md:static md:flex-row absolute top-full left-0 w-full bg-background md:bg-transparent border-b md:border-b-0 border-border md:w-auto md:space-y-0 flex-col space-y-4 py-4 md:py-0 px-6 md:px-0 z-50">
      <a href="/#workspace" class="text-muted hover:text-foreground transition-colors">Workspace</a>
      <a href="/#agents" class="text-muted hover:text-foreground transition-colors">Agents</a>
      <a href="/#people" class="text-muted hover:text-foreground transition-colors">People</a>
      <a href="/#pricing" class="text-muted hover:text-foreground transition-colors">Pricing</a>
      </nav>

      <div class="flex space-x-4">
      <button id="menu-toggle" class="md:hidden p-2 rounded-md hover:bg-accent transition-colors">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
      </button>
       <button id="theme-toggle" class="p-2 rounded-md hover:bg-accent transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
          </svg>
        </button>
      </div>
      </header>

      <!-- Hero Section -->
      <section class="h-screen min-h-[80vh] flex flex-col justify-center items-center text-center py-16 px-4 bg-gradient-to-br from-primary/5 to-secondary/5">
        <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black text-foreground mb-8 max-w-4xl leading-tight">
          <span class="text-primary">AI Agents</span>
          <br>
          <span class="text-foreground">Directory</span>
        </h1>
        <p class="text-lg sm:text-xl text-muted mb-10">
          Explore our specialized AI agents designed for various business needs.
        </p>
      </section>

      <!-- Storefront Agent Section -->
      <section id="storefront" class="py-20 px-4" style="background-color: #0b1f4b;">
        <div class="max-w-7xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center mb-20">
            <div>
              <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-black text-blue-200 mb-6">Storefront Agent</h1>
              <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white">Launch and manage your online storefront effortlessly.</h1>
              <button class="mt-6 px-6 py-3 bg-yellow-500 text-red-600 font-semibold rounded-full">Launch Storefront</button>
            </div>
            <div class="flex justify-center">
              <div class="relative bg-black rounded-[2.5rem] p-3 shadow-2xl max-w-xs w-full">
                <div class="relative rounded-[2rem] h-[400px] sm:h-[500px] md:h-[520px] overflow-hidden" style="background-color: #0b1f4b;">
                  <div class="absolute top-3 left-1/2 -translate-x-1/2 w-24 h-6 bg-black rounded-b-2xl"></div>
                  <div class="relative flex h-full flex-col px-6 pt-16 pb-20 text-blue-100">
                    <p class="text-xs uppercase tracking-[0.35rem] text-blue-200">Storefront</p>
                    <h3 class="mt-6 text-2xl font-semibold leading-tight text-white">Build your store in minutes.</h3>
                    <p class="mt-4 text-sm text-blue-100/80">Set up products, customize design, and go live instantly.</p>
                    <div class="mt-auto space-y-2 text-xs text-blue-50/80">
                      <p>• Product catalog created</p>
                      <p>• Payment integrated</p>
                      <p>• Store launched</p>
                    </div>
                  </div>
                  <div class="absolute bottom-6 left-1/2 -translate-x-1/2 w-24 h-1.5 rounded-full bg-blue-200/60"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Commerce Agent Section -->
      <section id="commerce" class="py-20 px-4" style="background-color: #7f1d1d;">
        <div class="max-w-7xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center mb-20">
            <div>
              <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-black text-rose-200 mb-6">Commerce Agent</h1>
              <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white">Manage products and inventory with AI precision.</h1>
              <button class="mt-6 px-6 py-3 bg-yellow-500 text-red-600 font-semibold rounded-full">Manage Commerce</button>
            </div>
            <div class="flex justify-center">
              <div class="relative bg-black rounded-[2.5rem] p-3 shadow-2xl max-w-xs w-full">
                <div class="relative rounded-[2rem] h-[400px] sm:h-[500px] md:h-[520px] overflow-hidden" style="background-color: #7f1d1d;">
                  <div class="absolute top-3 left-1/2 -translate-x-1/2 w-24 h-6 bg-black rounded-b-2xl"></div>
                  <div class="relative flex h-full flex-col px-6 pt-16 pb-20 text-rose-100">
                    <p class="text-xs uppercase tracking-[0.35rem] text-rose-300">Commerce</p>
                    <h3 class="mt-6 text-2xl font-semibold leading-tight text-white">Smart inventory management.</h3>
                    <p class="mt-4 text-sm text-rose-200">Track stock, optimize pricing, and automate restocking.</p>
                    <div class="mt-auto space-y-2 text-xs text-rose-100/80">
                      <p>• Inventory synced</p>
                      <p>• Low stock alerts</p>
                      <p>• Pricing optimized</p>
                    </div>
                  </div>
                  <div class="absolute bottom-6 left-1/2 -translate-x-1/2 w-24 h-1.5 rounded-full bg-rose-300/60"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Sales Agent Section -->
      <section id="sales" class="py-20 px-4" style="background-color: #052e16;">
        <div class="max-w-7xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center mb-20">
            <div>
              <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-black text-emerald-200 mb-6">Sales Agent</h1>
              <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white">Handle sales and orders with intelligent automation.</h1>
              <button class="mt-6 px-6 py-3 bg-yellow-500 text-red-600 font-semibold rounded-full">Manage Sales</button>
            </div>
            <div class="flex justify-center">
              <div class="relative bg-black rounded-[2.5rem] p-3 shadow-2xl max-w-xs w-full">
                <div class="relative rounded-[2rem] h-[400px] sm:h-[500px] md:h-[520px] overflow-hidden" style="background-color: #052e16;">
                  <div class="absolute top-3 left-1/2 -translate-x-1/2 w-24 h-6 bg-black rounded-b-2xl"></div>
                  <div class="relative flex h-full flex-col px-6 pt-16 pb-20 text-emerald-200">
                    <p class="text-xs uppercase tracking-[0.35rem] text-emerald-300">Sales</p>
                    <h3 class="mt-6 text-2xl font-semibold leading-tight text-white">Seamless order processing.</h3>
                    <p class="mt-4 text-sm text-emerald-100">Automate fulfillment, track orders, and boost conversions.</p>
                    <div class="mt-auto space-y-2 text-xs text-emerald-50/80">
                      <p>• Orders processed</p>
                      <p>• Fulfillment automated</p>
                      <p>• Revenue optimized</p>
                    </div>
                  </div>
                  <div class="absolute bottom-6 left-1/2 -translate-x-1/2 w-24 h-1.5 rounded-full bg-emerald-300/60"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Files Agent Section -->
      <section id="files" class="py-20 px-4 bg-gray-900">
        <div class="max-w-7xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center mb-20">
            <div>
              <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-black text-gray-200 mb-6">Files Agent</h1>
              <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white">Intelligent file management and organization.</h1>
              <button class="mt-6 px-6 py-3 bg-yellow-500 text-red-600 font-semibold rounded-full">Organize Files</button>
            </div>
            <div class="flex justify-center">
              <div class="relative bg-black rounded-[2.5rem] p-3 shadow-2xl max-w-xs w-full">
                <div class="relative rounded-[2rem] h-[400px] sm:h-[500px] md:h-[520px] overflow-hidden bg-gray-900">
                  <div class="absolute top-3 left-1/2 -translate-x-1/2 w-24 h-6 bg-black rounded-b-2xl"></div>
                  <div class="relative flex h-full flex-col px-6 pt-16 pb-20 text-gray-100">
                    <p class="text-xs uppercase tracking-[0.35rem] text-gray-300">Files</p>
                    <h3 class="mt-6 text-2xl font-semibold leading-tight text-white">Smart file organization.</h3>
                    <p class="mt-4 text-sm text-gray-200/80">Categorize, search, and manage your documents effortlessly.</p>
                    <div class="mt-auto space-y-2 text-xs text-gray-50/80">
                      <p>• Files categorized</p>
                      <p>• Search optimized</p>
                      <p>• Storage managed</p>
                    </div>
                  </div>
                  <div class="absolute bottom-6 left-1/2 -translate-x-1/2 w-24 h-1.5 rounded-full bg-gray-300/60"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Spacer -->
      <div class="h-16"></div>

      <Footer />
    </div>
    <script>
      const themeToggle = document.getElementById('theme-toggle');
      themeToggle.addEventListener('click', () => {
        document.documentElement.classList.toggle('dark');
        const isDark = document.documentElement.classList.contains('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
      });
      // Load theme
      const savedTheme = localStorage.getItem('theme');
      if (savedTheme === 'dark') {
        document.documentElement.classList.add('dark');
      }

      // Mobile menu toggle
      const menuToggle = document.getElementById('menu-toggle');
      const navMenu = document.getElementById('nav-menu');
      menuToggle.addEventListener('click', () => {
        navMenu.classList.toggle('hidden');
      });
    </script>
  </body>
</html>
