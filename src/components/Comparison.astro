---
const rows = [
  { feature: 'Connectivity', legacy: 'Always-online dependency',  tar: 'Offline-first native'     },
  { feature: 'Decisions',    legacy: 'Human-in-the-loop',         tar: 'Autonomous AI agents'     },
  { feature: 'Processing',   legacy: 'Batch processing',          tar: 'Real-time streaming'      },
  { feature: 'Data model',   legacy: 'Rigid schemas',             tar: 'Dynamic memory'           },
  { feature: 'Posture',      legacy: 'Reactive, not proactive',   tar: 'Predictive, not reactive' },
];
---

<section class="cmp" id="comparison">
  <div class="container">

    <div class="cmp-header" data-reveal>
      <span class="cmp-eyebrow">Comparison</span>
      <div class="cmp-head-body">
        <h2 class="cmp-title">Old stack vs TAR.</h2>
        <p class="cmp-sub">The traditional stack was designed for the web. TAR is designed for the physical world.</p>
      </div>
    </div>

    <div class="cmp-cols">
      <div class="cmp-spacer"></div>
      <div class="cmp-col-head">
        <span class="cmp-col-eyebrow">The Old Way</span>
        <span class="cmp-col-name">Traditional Stack</span>
      </div>
      <div class="cmp-col-head cmp-col-tar">
        <span class="cmp-col-eyebrow">The TAR Way</span>
        <span class="cmp-col-name">TAR Architecture</span>
      </div>
    </div>

    <div class="cmp-body">
      {rows.map((row, i) => (
        <div class="cmp-row" style={`--i: ${i}`} data-reveal>
          <span class="cmp-feat">{row.feature}</span>
          <span class="cmp-legacy">{row.legacy}</span>
          <span class="cmp-tar">{row.tar}</span>
        </div>
      ))}
    </div>

  </div>
</section>

<style>
/* ── Section ───────────────────────────────────── */
.cmp {
  background: var(--bg);
  padding: 120px 0;
}

.container {
  max-width: 1100px;
  margin: 0 auto;
  padding: 0 40px;
}

/* ── Header ────────────────────────────────────── */
.cmp-header {
  display: grid;
  grid-template-columns: 220px 1fr;
  gap: 48px;
  align-items: end;
  padding-bottom: 80px;
  border-bottom: 1px solid var(--border);
}

.cmp-eyebrow {
  font-size: 0.72rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.14em;
  color: var(--red);
}

.cmp-head-body {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.cmp-title {
  font-size: clamp(2.5rem, 5.5vw, 4rem);
  font-weight: 700;
  letter-spacing: -0.035em;
  line-height: 1;
  color: var(--ink);
}

.cmp-sub {
  font-size: 1.0625rem;
  line-height: 1.65;
  color: var(--body);
  max-width: 420px;
}

/* ── Column headers ────────────────────────────── */
.cmp-cols {
  display: grid;
  grid-template-columns: 220px 1fr 1fr;
  gap: 0;
  padding: 40px 0 20px;
  border-bottom: 1px solid var(--border);
}

.cmp-spacer { /* empty */ }

.cmp-col-head {
  padding: 0 40px;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.cmp-col-tar {
  background: var(--dark-bg);
  margin: -40px -40px -20px 0;
  padding: 40px 40px 20px;
  border-radius: var(--r-md) var(--r-md) 0 0;
}

.cmp-col-eyebrow {
  font-size: 0.72rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.14em;
  color: var(--muted);
}

.cmp-col-tar .cmp-col-eyebrow {
  color: var(--red);
}

.cmp-col-name {
  font-size: 1rem;
  font-weight: 700;
  letter-spacing: -0.015em;
  color: var(--ink);
}

.cmp-col-tar .cmp-col-name {
  color: white;
}

/* ── Rows ──────────────────────────────────────── */
.cmp-body {
  display: flex;
  flex-direction: column;
}

.cmp-row {
  display: grid;
  grid-template-columns: 220px 1fr 1fr;
  gap: 0;
  border-bottom: 1px solid var(--border);
}

.cmp-feat {
  padding: 22px 0;
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  color: var(--muted);
  align-self: center;
}

.cmp-legacy,
.cmp-tar {
  padding: 22px 40px;
  font-size: 0.9375rem;
  line-height: 1.5;
  align-self: center;
}

.cmp-legacy {
  color: var(--body);
  border-left: 1px solid var(--border);
}

.cmp-tar {
  background: var(--dark-bg);
  color: rgba(255,255,255,0.75);
  border-left: 1px solid rgba(255,255,255,0.06);
  font-weight: 500;
}

.cmp-row:last-child .cmp-tar {
  border-radius: 0 0 var(--r-md) 0;
}

/* ── Responsive ────────────────────────────────── */
@media (max-width: 900px) {
  .cmp-header {
    grid-template-columns: 1fr;
    gap: 20px;
  }

  .cmp-cols {
    grid-template-columns: 1fr 1fr;
  }

  .cmp-spacer { display: none; }

  .cmp-row {
    grid-template-columns: 1fr 1fr;
  }

  .cmp-feat { display: none; }

  .cmp-legacy {
    border-left: none;
    border-right: 1px solid var(--border);
  }
}

@media (max-width: 640px) {
  .cmp { padding: 80px 0; }
  .container { padding: 0 24px; }

  .cmp-cols {
    grid-template-columns: 1fr;
  }

  .cmp-col-tar {
    margin: 0 -24px;
    padding: 24px;
    border-radius: var(--r-md) var(--r-md) 0 0;
  }

  .cmp-row {
    grid-template-columns: 1fr;
  }

  .cmp-legacy {
    border-right: none;
  }

  .cmp-tar {
    margin: 0 -24px;
    padding: 22px 24px;
  }

  .cmp-row:last-child .cmp-tar {
    border-radius: 0;
  }
}
</style>
