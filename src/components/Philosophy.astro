---
const principles = [
  'Events over state',
  'Memory over dashboards',
  'Intelligence over automation',
  'Local-first, always',
  'Scale is a property, not a feature',
];
---

<section class="philosophy" id="philosophy">
  <div class="container">
    <div class="philosophy-content">
      <span class="section-label">TAR PHILOSOPHY</span>
      <h2 class="section-title">PRINCIPLES</h2>
      <div class="principles-list">
        {principles.map((principle) => (
          <div class="principle-item">
            <span class="principle-text">{principle}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .philosophy {
    padding: 120px 0;
    background: #fafafa;
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }
  .section-label {
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #0066ff;
    display: block;
    margin-bottom: 16px;
  }
  .philosophy-content {
    max-width: 800px;
    margin: 0 auto 80px;
  }
  .section-title {
    font-size: 2.25rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #1a1a1a;
    margin-bottom: 40px;
  }
  .principles-list {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
  }
  .principle-item {
    background: #1a1a1a;
    color: white;
    padding: 14px 28px;
    border-radius: 100px;
    font-size: 0.9375rem;
    font-weight: 500;
  }
  @media (max-width: 968px) {
    .principles-list {
      justify-content: center;
    }
    .section-title {
      font-size: 1.75rem;
    }
  }
</style>
