---
const principles = [
  'Events over state',
  'Memory over dashboards',
  'Intelligence over automation',
  'Local-first, always',
  'Scale is a property, not a feature',
];
---

<section class="philosophy section-padding" id="philosophy">
  <div class="container">
    <div class="philosophy-content" data-animate>
      <span class="section-label">Philosophy</span>
      <h2 class="section-title">Our Principles</h2>
      
      <div class="principles-list">
        {principles.map((principle, index) => (
          <div class="principle-item" style={`--delay: ${index * 0.08}s`}>
            <span class="principle-number">{String(index + 1).padStart(2, '0')}</span>
            <span class="principle-text">{principle}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .philosophy {
    background: #0a0a0a;
    position: relative;
    overflow: hidden;
  }

  .philosophy::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 60%;
    height: 150%;
    background: radial-gradient(ellipse, rgba(0, 102, 255, 0.08) 0%, transparent 60%);
    pointer-events: none;
  }

  .philosophy-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .section-label {
    display: inline-block;
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    margin-bottom: 16px;
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 3rem);
    color: white;
    margin-bottom: 60px;
  }

  .principles-list {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .principle-item {
    display: flex;
    align-items: center;
    gap: 32px;
    padding: 28px 36px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
    animation: slideIn 0.5s ease forwards;
    animation-delay: var(--delay);
    opacity: 0;
    transform: translateX(-20px);
  }

  @keyframes slideIn {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .principle-item:hover {
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(255, 255, 255, 0.12);
    transform: translateX(8px);
  }

  .principle-number {
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-accent);
    letter-spacing: 0.05em;
    opacity: 0.7;
  }

  .principle-text {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 500;
    color: white;
    letter-spacing: -0.01em;
  }

  @media (max-width: 640px) {
    .principle-item {
      padding: 20px 24px;
      gap: 20px;
    }

    .principle-text {
      font-size: 1rem;
    }
  }
</style>
