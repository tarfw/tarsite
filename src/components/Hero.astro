---
const stats = [
  { value: '400K+',  label: 'Events / sec' },
  { value: '99.99%', label: 'Uptime SLA'   },
  { value: '< 50ms', label: 'Latency'      },
  { value: '1B+',    label: 'Daily events' },
];
---

<section class="hero">
  <div class="container">

    <!-- Top meta row -->
    <div class="hero-meta" data-reveal>
      <div class="hero-badge">
        <span class="badge-dot"></span>
        Public beta — now open
      </div>
      <span class="hero-category">Operating System</span>
    </div>

    <!-- Giant headline -->
    <h1 class="hero-title" data-reveal>
      <span class="line line-1">The</span>
      <span class="line line-2">operating<em>system</em></span>
      <span class="line line-3">for the</span>
      <span class="line line-4 line-red">AI era.</span>
    </h1>

    <!-- Bottom row: sub + actions + stats -->
    <div class="hero-bottom" data-reveal>

      <div class="hero-sub-col">
        <p class="hero-sub">
          Memory. Intelligence. Connectivity.
          Built for millions moving in real time.
        </p>
        <div class="hero-actions">
          <a href="#signup" class="btn-primary">
            Start building free
            <svg width="14" height="14" viewBox="0 0 16 16" fill="none" aria-hidden="true">
              <path d="M3 8h10M9.5 4l4.5 4-4.5 4" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <a href="#features" class="btn-ghost">See how it works</a>
        </div>
      </div>

      <div class="hero-stats">
        {stats.map(s => (
          <div class="stat">
            <span class="stat-value">{s.value}</span>
            <span class="stat-label">{s.label}</span>
          </div>
        ))}
      </div>

    </div>

  </div>
</section>

<section class="logos">
  <div class="container">
    <div class="logos-row">
      <span class="logos-label">Trusted by</span>
      <span>AGARAM</span>
      <span>ULA</span>
      <span>IL</span>
      <span>PAY</span>
      <span>ELUTHU</span>
      <span>PESU</span>
    </div>
  </div>
</section>

<style>
/* ── Section ───────────────────────────────────── */
.hero {
  padding: 148px 0 96px;
  background: var(--bg);
  overflow: hidden;
}

.hero .container {
  display: flex;
  flex-direction: column;
  gap: 0;
}

/* ── Meta row ──────────────────────────────────── */
.hero-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40px;
}

.hero-badge {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  font-size: 0.8rem;
  font-weight: 500;
  color: var(--muted);
  letter-spacing: 0.01em;
}

.badge-dot {
  width: 6px;
  height: 6px;
  background: var(--red);
  border-radius: 50%;
  flex-shrink: 0;
  animation: pulse-dot 2.4s ease-in-out infinite;
}

@keyframes pulse-dot {
  0%, 100% { opacity: 1; }
  50%       { opacity: 0.4; }
}

.hero-category {
  font-size: 0.8rem;
  font-weight: 500;
  color: var(--muted);
  letter-spacing: 0.06em;
  text-transform: uppercase;
}

/* ── Giant headline ────────────────────────────── */
.hero-title {
  display: flex;
  flex-direction: column;
  font-size: clamp(4.5rem, 12vw, 10.5rem);
  font-weight: 700;
  line-height: 0.95;
  letter-spacing: -0.045em;
  color: var(--ink);
  margin-bottom: 80px;
  gap: 0;
}

.line {
  display: block;
}

/* line 2: "operating system" — mixed weight/style */
.line-2 {
  display: flex;
  align-items: baseline;
  gap: 0.2em;
}

.line-2 em {
  font-style: italic;
  font-weight: 400;
  color: var(--ink-3);
  font-size: 0.9em;
  letter-spacing: -0.03em;
}

/* line 4: red */
.line-red {
  color: var(--red);
}

/* ── Bottom row ────────────────────────────────── */
.hero-bottom {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: end;
  border-top: 1px solid var(--border);
  padding-top: 48px;
}

/* ── Sub + actions ─────────────────────────────── */
.hero-sub-col {
  display: flex;
  flex-direction: column;
  gap: 32px;
}

.hero-sub {
  font-size: 1.125rem;
  color: var(--body);
  line-height: 1.65;
  max-width: 360px;
}

.hero-actions {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
}

.btn-primary {
  display: inline-flex;
  align-items: center;
  gap: 9px;
  padding: 13px 26px;
  font-size: 0.9375rem;
  font-weight: 600;
  color: #fff;
  background: var(--red);
  border-radius: var(--r-pill);
  text-decoration: none;
  transition: background var(--dur-fast) ease,
              transform var(--dur-fast) ease;
  white-space: nowrap;
}

.btn-primary:hover {
  background: var(--red-dark);
  transform: scale(1.03);
}

.btn-primary svg {
  transition: transform var(--dur-fast) ease;
}

.btn-primary:hover svg {
  transform: translateX(3px);
}

.btn-ghost {
  display: inline-flex;
  align-items: center;
  padding: 13px 26px;
  font-size: 0.9375rem;
  font-weight: 500;
  color: var(--body);
  background: transparent;
  border: 1.5px solid var(--border);
  border-radius: var(--r-pill);
  text-decoration: none;
  transition: border-color var(--dur-fast) ease,
              color var(--dur-fast) ease;
  white-space: nowrap;
}

.btn-ghost:hover {
  border-color: var(--ink-3);
  color: var(--ink);
}

/* ── Stats ─────────────────────────────────────── */
.hero-stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 36px 24px;
  justify-items: start;
}

.stat {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.stat-value {
  font-family: var(--font-display);
  font-size: clamp(1.75rem, 3vw, 2.375rem);
  font-weight: 700;
  letter-spacing: -0.04em;
  color: var(--ink);
  line-height: 1;
}

.stat-label {
  font-size: 0.8125rem;
  color: var(--muted);
  font-weight: 500;
}

/* ── Logos strip ───────────────────────────────── */
.logos {
  border-top: 1px solid var(--border);
  padding: 28px 0;
}

.logos-row {
  display: flex;
  align-items: center;
  gap: 40px;
  flex-wrap: wrap;
}

.logos-label {
  font-size: 0.75rem;
  font-weight: 600;
  color: var(--muted);
  text-transform: uppercase;
  letter-spacing: 0.1em;
  white-space: nowrap;
  padding-right: 8px;
  border-right: 1px solid var(--border);
}

.logos-row span:not(.logos-label) {
  font-size: 0.875rem;
  font-weight: 700;
  color: var(--ink-3);
  letter-spacing: 0.06em;
  opacity: 0.35;
  white-space: nowrap;
}

/* ── Responsive ────────────────────────────────── */
@media (max-width: 860px) {
  .hero-title {
    font-size: clamp(3.5rem, 10vw, 6rem);
    margin-bottom: 56px;
  }

  .hero-bottom {
    grid-template-columns: 1fr;
    gap: 48px;
  }

  .hero-stats {
    grid-template-columns: repeat(4, auto);
    gap: 24px 36px;
  }
}

@media (max-width: 560px) {
  .hero {
    padding: 120px 0 72px;
  }

  .hero-meta {
    margin-bottom: 28px;
  }

  .hero-category {
    display: none;
  }

  .hero-title {
    font-size: clamp(3rem, 13vw, 4.5rem);
    margin-bottom: 44px;
  }

  .hero-stats {
    grid-template-columns: 1fr 1fr;
    gap: 28px 20px;
  }

  .hero-actions {
    flex-direction: column;
  }

  .btn-primary,
  .btn-ghost {
    justify-content: center;
    text-align: center;
  }

  .logos-row {
    gap: 24px;
  }
}
</style>
