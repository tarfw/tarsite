---
const plans = [
  {
    name: 'Free',
    price: '$0',
    period: 'forever',
    description: 'Perfect for individuals and learning',
    features: [
      '1M events/month',
      '7-day retention',
      'Core features',
      'Community support',
    ],
    cta: 'Start Free',
    popular: false,
  },
  {
    name: 'Token-based',
    price: 'Usage',
    period: 'pay-as-you-go',
    description: 'For growing teams with variable needs',
    features: [
      'Scale to billions of events',
      'Unlimited retention',
      'Advanced dashboards',
      'AI-powered insights',
      'Priority support',
    ],
    cta: 'Start Scaling',
    popular: true,
  },
  {
    name: 'Fixed',
    price: '$5',
    period: 'per month',
    description: 'Predictable cost for established teams',
    features: [
      '1B events included',
      'Fixed monthly budget',
      'Unlimited team members',
      'SSO & SAML',
      'Dedicated support',
      'SLA guarantee',
    ],
    cta: 'Get Fixed Plan',
    popular: false,
  },
];
---

<section id="pricing" class="pricing section-padding">
  <div class="container">
    <div class="section-header" data-animate>
      <span class="section-label">Pricing</span>
      <h2 class="section-title">Simple, transparent pricing</h2>
      <p class="section-subtitle">
        Start free and scale as you grow. No hidden fees, no surprises.
      </p>
    </div>
    
    <div class="pricing-grid">
      {plans.map((plan) => (
        <div class={`pricing-card ${plan.popular ? 'popular' : ''}`} data-animate>
          {plan.popular && <div class="popular-badge">Most Popular</div>}
          
          <div class="pricing-header">
            <h3 class="plan-name">{plan.name}</h3>
            <div class="plan-price">
              <span class="price">{plan.price}</span>
              {plan.period !== 'pay-as-you-go' && plan.period !== 'forever' && (
                <span class="period">/{plan.period}</span>
              )}
              {plan.period === 'pay-as-you-go' && (
                <span class="period-desc">pay-as-you-go</span>
              )}
              {plan.period === 'forever' && (
                <span class="period-desc">forever</span>
              )}
            </div>
            <p class="plan-description">{plan.description}</p>
          </div>
          
          <ul class="plan-features">
            {plan.features.map((feature) => (
              <li>
                <svg width="18" height="18" viewBox="0 0 20 20" fill="none">
                  <path d="M16.667 5L7.5 14.167L3.333 10" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          
          <a href="#signup" class={`btn ${plan.popular ? 'btn-primary' : 'btn-secondary'}`}>
            {plan.cta}
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .pricing {
    background: var(--color-bg);
    position: relative;
  }

  .section-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 60px;
  }

  .section-label {
    display: inline-block;
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: 16px;
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 2.75rem);
    color: var(--color-text-main);
    margin-bottom: 16px;
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    align-items: start;
  }

  .pricing-card {
    background: white;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: 40px;
    position: relative;
    transition: all var(--transition-base);
  }

  .pricing-card.popular {
    border-color: var(--color-primary);
    box-shadow: 0 20px 60px rgba(0, 102, 255, 0.1);
    transform: scale(1.02);
  }

  .pricing-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .pricing-card.popular:hover {
    transform: scale(1.02) translateY(-4px);
  }

  .popular-badge {
    position: absolute;
    top: -14px;
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-primary);
    color: white;
    padding: 8px 20px;
    border-radius: 100px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .pricing-header {
    text-align: center;
    margin-bottom: 32px;
    padding-bottom: 28px;
    border-bottom: 1px solid var(--color-border);
  }

  .plan-name {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 16px;
    color: var(--color-text-main);
  }

  .plan-price {
    margin-bottom: 12px;
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 4px;
  }

  .price {
    font-family: var(--font-display);
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-text-main);
    letter-spacing: -0.02em;
  }

  .period {
    font-size: 1rem;
    color: var(--color-text-muted);
  }

  .period-desc {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .plan-description {
    color: var(--color-text-body);
    font-size: 0.9375rem;
  }

  .plan-features {
    list-style: none;
    margin-bottom: 32px;
  }

  .plan-features li {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 0;
    border-bottom: 1px solid #f5f5f5;
    font-size: 0.9375rem;
    color: var(--color-text-body);
  }

  .plan-features li:last-child {
    border-bottom: none;
  }

  .plan-features svg {
    color: var(--color-accent);
    flex-shrink: 0;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 24px;
    font-size: 0.9375rem;
    font-weight: 600;
    border-radius: 100px;
    border: none;
    cursor: pointer;
    transition: all var(--transition-base);
    width: 100%;
  }

  .btn-primary {
    background: var(--color-primary);
    color: white;
  }

  .btn-primary:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 102, 255, 0.25);
  }

  .btn-secondary {
    background: white;
    color: var(--color-text-main);
    border: 1px solid var(--color-border);
  }

  .btn-secondary:hover {
    background: var(--color-bg);
    border-color: #d4d4d4;
  }

  @media (max-width: 968px) {
    .pricing-grid {
      grid-template-columns: 1fr;
      max-width: 400px;
      margin: 0 auto;
    }

    .pricing-card.popular {
      transform: none;
    }

    .pricing-card.popular:hover {
      transform: translateY(-4px);
    }
  }
</style>
