---
const plans = [
  {
    number: '01',
    name: 'Pay as you go',
    eyebrow: 'For exploring',
    description: 'Start instantly with usage-based pricing and no commitments.',
    cta: 'Start free',
    ctaHref: '#signup',
    highlight: false,
    rates: [
      { label: 'Email',    value: '$1.50 / 1,000' },
      { label: 'SMS',      value: 'From $0.0045'  },
      { label: 'WhatsApp', value: '$0.005 / msg'  },
      { label: 'Push',     value: '$0.0005 / msg' },
    ],
    features: [
      'All channels except Apple Messages',
      'Full Automation Suite',
      'Unlimited usage',
      'Suite of APIs',
    ],
  },
  {
    number: '02',
    name: 'Monthly Contacts',
    eyebrow: 'For scaling',
    description: 'Predictable monthly pricing for growing businesses with reduced rates.',
    cta: 'Request a bundle',
    ctaHref: '#signup',
    highlight: true,
    rates: [
      { label: 'Starts from', value: '50K contacts'        },
      { label: 'Messages',    value: '500K included'       },
      { label: 'SMS rates',   value: 'Reduced'             },
      { label: 'Push',        value: 'Unlimited / contact' },
    ],
    features: [
      'Everything in Pay as you go',
      'Remove TAR branded footer',
      'Overage allowed',
      'Lower SMS rates',
    ],
  },
  {
    number: '03',
    name: 'Enterprise',
    eyebrow: 'For scale',
    description: 'Custom limits, dedicated support, and premium SLAs for large teams.',
    cta: 'Contact sales',
    ctaHref: '#signup',
    highlight: false,
    rates: [
      { label: 'Contacts',       value: 'Custom'   },
      { label: 'Messages',       value: 'Custom'   },
      { label: 'Apple Messages', value: 'Included' },
      { label: 'API rates',      value: 'Custom'   },
    ],
    features: [
      'Everything in Monthly Contacts',
      'Single Sign-On (SSO)',
      'Dedicated support team',
      'SLA guarantees',
    ],
  },
];

const compareGroups = [
  {
    group: 'Core',
    rows: [
      { feature: 'Full Automation Suite',  payg: true,  bundle: true,  enterprise: true  },
      { feature: 'Analytics',              payg: true,  bundle: true,  enterprise: true  },
      { feature: 'Template studio',        payg: true,  bundle: true,  enterprise: true  },
      { feature: 'Customer Data Platform', payg: true,  bundle: true,  enterprise: true  },
      { feature: 'Suite of APIs',          payg: true,  bundle: true,  enterprise: true  },
    ],
  },
  {
    group: 'Channels',
    rows: [
      { feature: 'Email',                        payg: true,  bundle: true,  enterprise: true },
      { feature: 'SMS',                          payg: true,  bundle: true,  enterprise: true },
      { feature: 'WhatsApp',                     payg: true,  bundle: true,  enterprise: true },
      { feature: 'Push Notifications',           payg: true,  bundle: true,  enterprise: true },
      { feature: 'Apple Messages for Business',  payg: false, bundle: false, enterprise: true },
    ],
  },
  {
    group: 'Billing',
    rows: [
      { feature: 'Remove branded footer',        payg: false, bundle: true,  enterprise: true },
      { feature: 'Overage allowed',              payg: false, bundle: true,  enterprise: true },
      { feature: 'Unlimited Push per contact',   payg: false, bundle: true,  enterprise: true },
      { feature: 'Custom volume pricing',        payg: false, bundle: false, enterprise: true },
    ],
  },
  {
    group: 'Enterprise',
    rows: [
      { feature: 'Single Sign-On (SSO)',         payg: false, bundle: false, enterprise: true },
      { feature: 'Multiple workspaces',          payg: false, bundle: false, enterprise: true },
      { feature: 'Dedicated support team',       payg: false, bundle: false, enterprise: true },
      { feature: 'Technical Account Manager',    payg: false, bundle: false, enterprise: true },
      { feature: 'SLA guarantees',               payg: false, bundle: false, enterprise: true },
    ],
  },
];
---

<section class="pricing" id="pricing">
  <div class="container">

    <div class="pricing-header" data-reveal>
      <span class="pricing-eyebrow">Pricing</span>
      <div class="pricing-head-body">
        <h2 class="pricing-title">Simple,<br />transparent pricing.</h2>
        <p class="pricing-sub">Start free. Scale as you grow. No hidden fees, no surprises.</p>
      </div>
    </div>

    {plans.map((p, i) => (
      <div class={`plan ${p.highlight ? 'plan--hi' : ''}`} style={`--i: ${i}`} data-reveal>
        <div class="plan-meta">
          <span class="plan-num">{p.number}</span>
          <span class="plan-eyebrow">{p.eyebrow}</span>
        </div>

        <div class="plan-main">
          <h3 class="plan-name">{p.name}</h3>
          <p class="plan-desc">{p.description}</p>
          <a href={p.ctaHref} class={`plan-cta ${p.highlight ? 'plan-cta--hi' : ''}`}>
            {p.cta}
            <svg width="15" height="15" viewBox="0 0 16 16" fill="none" aria-hidden="true">
              <path d="M3 8h10M9 4l4 4-4 4" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </div>

        <div class="plan-detail">
          <div class="plan-rates">
            {p.rates.map(r => (
              <div class="rate-row">
                <span class="rate-label">{r.label}</span>
                <span class="rate-value">{r.value}</span>
              </div>
            ))}
          </div>
          <ul class="plan-feats">
            {p.features.map(f => (
              <li class="plan-feat">
                <svg width="14" height="14" viewBox="0 0 14 14" fill="none" aria-hidden="true">
                  <path d="M2.5 7l3 3 6-6" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                {f}
              </li>
            ))}
          </ul>
        </div>
      </div>
    ))}

    <!-- Compare table -->
    <div class="compare" data-reveal>
      <div class="compare-header">
        <span class="pricing-eyebrow">Compare</span>
        <h3 class="compare-title">What's included</h3>
      </div>

      <div class="compare-scroll">
        <table class="ct">
          <thead>
            <tr>
              <th class="ct-f"></th>
              <th class="ct-c">Pay as you go</th>
              <th class="ct-c ct-c--hi">Monthly Contacts</th>
              <th class="ct-c">Enterprise</th>
            </tr>
          </thead>
          <tbody>
            {compareGroups.map(grp => (
              <>
                <tr class="ct-group">
                  <td colspan="4">{grp.group}</td>
                </tr>
                {grp.rows.map(row => (
                  <tr class="ct-row">
                    <td class="ct-fname">{row.feature}</td>
                    <td class="ct-cell">
                      {row.payg
                        ? <svg class="yes" width="14" height="14" viewBox="0 0 14 14" fill="none"><path d="M2.5 7l3 3 6-6" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round"/></svg>
                        : <span class="no">—</span>}
                    </td>
                    <td class="ct-cell ct-cell--hi">
                      {row.bundle
                        ? <svg class="yes" width="14" height="14" viewBox="0 0 14 14" fill="none"><path d="M2.5 7l3 3 6-6" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round"/></svg>
                        : <span class="no">—</span>}
                    </td>
                    <td class="ct-cell">
                      {row.enterprise
                        ? <svg class="yes" width="14" height="14" viewBox="0 0 14 14" fill="none"><path d="M2.5 7l3 3 6-6" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round"/></svg>
                        : <span class="no">—</span>}
                    </td>
                  </tr>
                ))}
              </>
            ))}
          </tbody>
        </table>
      </div>
    </div>

  </div>
</section>

<style>
/* ── Section ───────────────────────────────────── */
.pricing {
  background: var(--bg-soft);
  padding: 120px 0;
}

.container {
  max-width: 1100px;
  margin: 0 auto;
  padding: 0 40px;
}

/* ── Header ────────────────────────────────────── */
.pricing-header {
  display: grid;
  grid-template-columns: 220px 1fr;
  gap: 48px;
  align-items: end;
  padding-bottom: 80px;
  border-bottom: 1px solid var(--border);
}

.pricing-eyebrow {
  font-size: 0.72rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.14em;
  color: var(--red);
}

.pricing-head-body {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.pricing-title {
  font-size: clamp(2.5rem, 5.5vw, 4rem);
  font-weight: 700;
  letter-spacing: -0.035em;
  line-height: 1;
  color: var(--ink);
}

.pricing-sub {
  font-size: 1.0625rem;
  line-height: 1.65;
  color: var(--body);
  max-width: 380px;
}

/* ── Plan rows ─────────────────────────────────── */
.plan {
  display: grid;
  grid-template-columns: 220px 1fr 1fr;
  gap: 48px;
  align-items: start;
  padding: 56px 0;
  border-bottom: 1px solid var(--border);
  background: var(--bg-soft);
}

.plan--hi {
  background: var(--dark-bg);
  margin: 0 -40px;
  padding: 56px 40px;
  border-radius: var(--r-lg);
  border-color: transparent;
}

/* Meta */
.plan-meta {
  display: flex;
  flex-direction: column;
  gap: 8px;
  padding-top: 4px;
}

.plan-num {
  font-size: 0.7rem;
  color: var(--muted);
  letter-spacing: 0.06em;
}

.plan--hi .plan-num {
  color: rgba(255,255,255,0.25);
}

.plan-eyebrow {
  font-size: 0.72rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.14em;
  color: var(--red);
}

/* Main */
.plan-name {
  font-size: clamp(1.375rem, 2.2vw, 1.75rem);
  font-weight: 700;
  letter-spacing: -0.02em;
  color: var(--ink);
  margin-bottom: 12px;
}

.plan--hi .plan-name {
  color: white;
}

.plan-desc {
  font-size: 0.9375rem;
  line-height: 1.65;
  color: var(--body);
  margin-bottom: 28px;
}

.plan--hi .plan-desc {
  color: rgba(255,255,255,0.45);
}

.plan-cta {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 11px 22px;
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--ink);
  background: var(--bg);
  border: 1.5px solid var(--border);
  border-radius: var(--r-pill);
  text-decoration: none;
  transition: border-color var(--dur-fast) ease,
              background var(--dur-fast) ease,
              color var(--dur-fast) ease,
              box-shadow var(--dur-fast) ease;
  width: fit-content;
}

.plan-cta:hover {
  border-color: var(--ink-3);
  background: var(--bg-soft);
  color: var(--ink);
}

.plan-cta--hi {
  color: #fff;
  background: var(--red);
  border-color: var(--red);
}

.plan-cta--hi:hover {
  background: var(--red-dark);
  border-color: var(--red-dark);
  box-shadow: 0 4px 16px rgba(200,16,46,0.30);
}

/* Detail */
.plan-rates {
  display: flex;
  flex-direction: column;
  border-top: 1px solid var(--border);
  margin-bottom: 24px;
}

.plan--hi .plan-rates {
  border-top-color: rgba(255,255,255,0.10);
}

.rate-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid var(--border);
}

.plan--hi .rate-row {
  border-bottom-color: rgba(255,255,255,0.08);
}

.rate-label {
  font-size: 0.8125rem;
  color: var(--muted);
}

.plan--hi .rate-label {
  color: rgba(255,255,255,0.35);
}

.rate-value {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--ink);
  letter-spacing: -0.01em;
}

.plan--hi .rate-value {
  color: white;
}

.plan-feats {
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.plan-feat {
  display: flex;
  align-items: center;
  gap: 10px;
  font-size: 0.875rem;
  color: var(--body);
}

.plan--hi .plan-feat {
  color: rgba(255,255,255,0.55);
}

.plan-feat svg {
  flex-shrink: 0;
  color: var(--red);
}

/* ── Compare table ─────────────────────────────── */
.compare {
  margin-top: 80px;
}

.compare-header {
  margin-bottom: 40px;
}

.compare-title {
  font-size: clamp(1.5rem, 2.5vw, 2rem);
  font-weight: 700;
  letter-spacing: -0.025em;
  color: var(--ink);
  margin-top: 12px;
}

.compare-scroll {
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.ct {
  width: 100%;
  border-collapse: collapse;
  font-size: 0.875rem;
}

.ct-f {
  width: 40%;
  text-align: left;
  padding: 16px 0;
  font-weight: 600;
  color: var(--ink-3);
}

.ct-c {
  text-align: center;
  padding: 16px;
  font-size: 0.8125rem;
  font-weight: 600;
  color: var(--ink-3);
  border-bottom: 2px solid var(--border);
  white-space: nowrap;
}

.ct-c--hi {
  color: var(--red);
  border-bottom-color: var(--red);
}

.ct-group td {
  padding: 20px 0 10px;
  font-size: 0.72rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.12em;
  color: var(--muted);
  border-top: 1px solid var(--border);
}

.ct-row {
  border-bottom: 1px solid var(--border);
}

.ct-fname {
  padding: 14px 0;
  font-size: 0.875rem;
  color: var(--ink-3);
}

.ct-cell {
  text-align: center;
  padding: 14px;
}

.ct-cell--hi {
  background: rgba(200,16,46,0.04);
}

.yes { color: var(--red); }

.no {
  color: var(--muted);
  font-size: 0.875rem;
}

/* ── Responsive ────────────────────────────────── */
@media (max-width: 900px) {
  .pricing-header {
    grid-template-columns: 1fr;
    gap: 20px;
  }

  .plan {
    grid-template-columns: 80px 1fr;
    grid-template-rows: auto auto;
    gap: 24px;
  }

  .plan-detail {
    grid-column: 1 / -1;
  }
}

@media (max-width: 640px) {
  .pricing { padding: 80px 0; }
  .container { padding: 0 24px; }

  .plan {
    grid-template-columns: 1fr;
    gap: 20px;
  }

  .plan--hi {
    margin: 0 -24px;
    padding: 48px 24px;
  }
}
</style>
