---
const plans = [
  {
    name: 'Free',
    price: '$0',
    period: 'forever',
    description: 'Perfect for individuals and learning',
    features: [
      '1M events/month',
      '7-day retention',
      'Core features',
      'Community support',
    ],
    cta: 'Start Free',
    popular: false,
  },
  {
    name: 'Token-based',
    price: 'Usage',
    period: 'pay-as-you-go',
    description: 'For growing teams with variable needs',
    features: [
      'Scale to billions of events',
      'Unlimited retention',
      'Advanced dashboards',
      'AI-powered insights',
      'Priority support',
    ],
    cta: 'Start Scaling',
    popular: true,
  },
  {
    name: 'Fixed',
    price: '$5',
    period: 'per month',
    description: 'Predictable cost for established teams',
    features: [
      '1B events included',
      'Fixed monthly budget',
      'Unlimited team members',
      'SSO & SAML',
      'Dedicated support',
      'SLA guarantee',
    ],
    cta: 'Get Fixed Plan',
    popular: false,
  },
];
---

<section id="pricing" class="pricing">
  <div class="container">
    <h2 class="section-title">Simple, Transparent Pricing</h2>
    <p class="section-subtitle">
      Start free and scale as you grow. No hidden fees, no surprises.
    </p>
    <div class="pricing-grid">
      {plans.map((plan) => (
        <div class={`pricing-card ${plan.popular ? 'popular' : ''}`}>
          {plan.popular && <div class="popular-badge">Most Popular</div>}
          <div class="pricing-header">
            <h3 class="plan-name">{plan.name}</h3>
            <div class="plan-price">
              <span class="price">{plan.price}</span>
              <span class="period">/{plan.period}</span>
            </div>
            <p class="plan-description">{plan.description}</p>
          </div>
          <ul class="plan-features">
            {plan.features.map((feature) => (
              <li>
                <svg width="18" height="18" viewBox="0 0 20 20" fill="none">
                  <path d="M16.667 5L7.5 14.167L3.333 10" stroke="#0066ff" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          <a href="#signup" class={`btn ${plan.popular ? 'btn-primary' : 'btn-secondary'}`}>
            {plan.cta}
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .pricing {
    padding: 120px 0;
    background: #fafafa;
  }
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }
  .section-title {
    font-size: 2.25rem;
    font-weight: 600;
    text-align: center;
    margin-bottom: 16px;
    letter-spacing: -0.02em;
    color: #1a1a1a;
  }
  .section-subtitle {
    font-size: 1.125rem;
    color: #666;
    text-align: center;
    max-width: 600px;
    margin: 0 auto 80px;
    line-height: 1.7;
  }
  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 32px;
    align-items: start;
  }
  .pricing-card {
    background: white;
    border: 1px solid #eaeaea;
    border-radius: 16px;
    padding: 32px;
    position: relative;
    transition: all 0.3s ease;
  }
  .pricing-card.popular {
    border-color: #0066ff;
    box-shadow: 0 20px 60px rgba(0, 102, 255, 0.1);
  }
  .pricing-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.06);
  }
  .pricing-card.popular:hover {
    box-shadow: 0 25px 70px rgba(0, 102, 255, 0.12);
  }
  .popular-badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: #0066ff;
    color: white;
    padding: 6px 16px;
    border-radius: 100px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  .pricing-header {
    text-align: center;
    margin-bottom: 32px;
    padding-bottom: 32px;
    border-bottom: 1px solid #eaeaea;
  }
  .plan-name {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 16px;
    color: #1a1a1a;
  }
  .plan-price {
    margin-bottom: 12px;
  }
  .price {
    font-size: 3rem;
    font-weight: 600;
    color: #1a1a1a;
    letter-spacing: -0.02em;
  }
  .period {
    color: #666;
    font-size: 1rem;
  }
  .plan-description {
    color: #666;
    font-size: 0.875rem;
  }
  .plan-features {
    list-style: none;
    margin-bottom: 32px;
  }
  .plan-features li {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 14px 0;
    border-bottom: 1px solid #f5f5f5;
    font-size: 0.9375rem;
    color: #444;
  }
  .plan-features li:last-child {
    border-bottom: none;
  }
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    font-size: 0.9375rem;
    font-weight: 600;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
    width: 100%;
  }
  .btn-primary {
    background: #0066ff;
    color: white;
  }
  .btn-primary:hover {
    background: #0052cc;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 102, 255, 0.25);
  }
  .btn-secondary {
    background: white;
    color: #1a1a1a;
    border: 1px solid #e5e5e5;
  }
  .btn-secondary:hover {
    background: #fafafa;
    border-color: #d5d5d5;
  }
  @media (max-width: 968px) {
    .pricing-grid {
      grid-template-columns: 1fr;
    }
    .pricing-card.popular {
      transform: none;
    }
    .pricing-card.popular:hover {
      transform: translateY(-4px);
    }
  }
</style>
