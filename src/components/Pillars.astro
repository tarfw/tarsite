---
const pillars = [
  {
    number: '01',
    name: 'Trace',
    title: 'The AI Memory System',
    description: 'Trace is the brain of TAR. Every item lives in three dimensions — giving your systems not just data, but understanding.',
    items: [
      { label: 'State',  sub: 'The DNA',      desc: 'The universal blueprint. What something is — its recipe, spec, identity. Stable. Shareable. Global.' },
      { label: 'Events', sub: 'The Presence', desc: 'What is happening right now. A sale in T. Nagar. A stock drop in Velachery. Singular moments in time and location.' },
      { label: 'Trace',  sub: 'The History',  desc: 'Every movement, sale, delay, and anomaly recorded as machine memory. Forecast demand. Detect failure. Train AI on real city behavior.' },
    ],
  },
  {
    number: '02',
    name: 'Agents',
    title: 'Autonomous Intelligence',
    description: 'Every instance can have its own AI Agent. They monitor, decide, and act — without dashboards, without polling, without delay.',
    items: [
      { label: 'Monitor', sub: 'Observe', desc: 'Temperature thresholds. Stock levels. Delivery delays. Network congestion. Agents watch everything so humans don\'t have to.' },
      { label: 'Decide',  sub: 'Reason',  desc: 'Reroute deliveries. Switch fulfillment locations. Lock stock during conflicts. Trigger alerts before failure.' },
      { label: 'Act',     sub: 'Execute', desc: 'Without dashboards. Without human polling. In milliseconds. Agents respond to reality, not to commands.' },
    ],
  },
  {
    number: '03',
    name: 'Relay',
    title: 'The Nervous System',
    description: 'Relay moves data between every node in your network — customer apps, rider apps, POS, warehouses, bots, and AI agents — at city scale.',
    items: [
      { label: 'Speed',    sub: 'Throughput',   desc: '400,000+ pings per second over high-speed WebSockets. Built for festivals, flash sales, and disaster scenarios.' },
      { label: 'Security', sub: 'Networking',   desc: 'Private vRack networking between all nodes and agents. Zero public internet exposure.' },
      { label: 'Reach',    sub: 'Connectivity', desc: 'Customer apps. Rider apps. POS. Warehouses. WhatsApp. Telegram. AI agents. All connected, always.' },
    ],
  },
];
---

<section class="pillars" id="architecture">
  <div class="container">

    <!-- Section header -->
    <div class="pillars-header" data-reveal>
      <div class="header-left">
        <span class="eyebrow">Architecture</span>
        <h2 class="pillars-title">Three Pillars.</h2>
      </div>
      <p class="pillars-sub">
        Trace remembers. Agents decide. Relay connects.<br />
        One platform — end to end.
      </p>
    </div>

    <!-- Pillars -->
    {pillars.map((p, pi) => (
      <div class="pillar" data-reveal>

        <!-- Pillar header row -->
        <div class="pillar-head">
          <span class="pillar-num">{p.number}</span>
          <span class="pillar-name">{p.name}</span>
          <h3 class="pillar-title">{p.title}</h3>
          <p class="pillar-desc">{p.description}</p>
        </div>

        <!-- Items -->
        <div class="pillar-items">
          {p.items.map(item => (
            <div class="item">
              <div class="item-head">
                <span class="item-label">{item.label}</span>
                <span class="item-sub">{item.sub}</span>
              </div>
              <p class="item-desc">{item.desc}</p>
            </div>
          ))}
        </div>

      </div>
    ))}

  </div>
</section>

<style>
.pillars {
  background: var(--dark-bg);
  color: white;
  padding: 120px 0;
}

.container {
  max-width: 1100px;
  margin: 0 auto;
  padding: 0 40px;
}

/* ── Section header ────────────────────────────── */
.pillars-header {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 48px;
  align-items: end;
  padding-bottom: 72px;
  border-bottom: 1px solid rgba(255,255,255,0.08);
}

.header-left {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.eyebrow {
  font-size: 0.72rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.14em;
  color: var(--red);
}

.pillars-title {
  font-size: clamp(2.5rem, 5vw, 3.75rem);
  font-weight: 700;
  letter-spacing: -0.035em;
  line-height: 1;
  color: white;
}

.pillars-sub {
  font-size: 1.0625rem;
  line-height: 1.65;
  color: rgba(255,255,255,0.40);
  align-self: end;
}

/* ── Pillar ────────────────────────────────────── */
.pillar {
  border-bottom: 1px solid rgba(255,255,255,0.08);
  padding: 64px 0;
}

/* Pillar header: num · name · title · desc in a row */
.pillar-head {
  display: grid;
  grid-template-columns: 48px 120px 1fr 1fr;
  gap: 24px;
  align-items: start;
  margin-bottom: 48px;
}

.pillar-num {
  font-size: 0.7rem;
  color: rgba(255,255,255,0.20);
  letter-spacing: 0.06em;
  padding-top: 5px;
}

.pillar-name {
  font-size: 0.72rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.14em;
  color: var(--red);
  padding-top: 5px;
}

.pillar-title {
  font-size: clamp(1.25rem, 2vw, 1.625rem);
  font-weight: 700;
  letter-spacing: -0.02em;
  line-height: 1.15;
  color: white;
}

.pillar-desc {
  font-size: 0.9rem;
  line-height: 1.7;
  color: rgba(255,255,255,0.40);
}

/* ── Items row ─────────────────────────────────── */
.pillar-items {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 0;
  border-top: 1px solid rgba(255,255,255,0.07);
  margin-left: 192px;
}

.item {
  padding: 28px 32px 28px 0;
  border-right: 1px solid rgba(255,255,255,0.07);
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.item:last-child {
  border-right: none;
  padding-right: 0;
}

.item-head {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.item-label {
  font-size: 0.875rem;
  font-weight: 700;
  color: white;
  letter-spacing: -0.01em;
}

.item-sub {
  font-size: 0.75rem;
  color: rgba(255,255,255,0.28);
  letter-spacing: 0.02em;
}

.item-desc {
  font-size: 0.875rem;
  line-height: 1.65;
  color: rgba(255,255,255,0.42);
}

/* ── Responsive ────────────────────────────────── */
@media (max-width: 900px) {
  .pillars-header {
    grid-template-columns: 1fr;
    gap: 20px;
  }

  .pillar-head {
    grid-template-columns: 40px 100px 1fr;
    grid-template-rows: auto auto;
  }

  .pillar-desc {
    grid-column: 1 / -1;
  }

  .pillar-items {
    margin-left: 0;
  }
}

@media (max-width: 640px) {
  .pillars { padding: 80px 0; }
  .container { padding: 0 24px; }

  .pillar { padding: 48px 0; }

  .pillar-head {
    grid-template-columns: 1fr;
    gap: 8px;
    margin-bottom: 32px;
  }

  .pillar-num { display: none; }

  .pillar-items {
    grid-template-columns: 1fr;
  }

  .item {
    padding: 20px 0;
    border-right: none;
    border-bottom: 1px solid rgba(255,255,255,0.07);
  }

  .item:last-child {
    border-bottom: none;
  }
}
</style>
